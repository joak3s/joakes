# =============================================================================
# Admin App Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# cp env.template .env.local

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (found in your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anonymous/public key (found in your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Your Supabase service role key (for admin operations)
# ⚠️  Keep this secret - never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string for Prisma
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/your_database_name

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Admin user credentials for the admin dashboard
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# =============================================================================
# AI/OPENAI CONFIGURATION (Optional)
# =============================================================================
# OpenAI API key for AI features (chat, embeddings, etc.)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# OpenAI organization ID (optional)
OPENAI_ORG_ID=org-your_organization_id_here

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Google Analytics 4 Measurement ID
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
SENTRY_DSN=https://your_sentry_dsn_here

# =============================================================================
# FILE STORAGE
# =============================================================================
# Supabase storage bucket name for file uploads
NEXT_PUBLIC_STORAGE_BUCKET=your_storage_bucket_name

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Node environment
NODE_ENV=development

# Enable Next.js debug logging
NEXT_DEBUG=1

# =============================================================================
# SECURITY
# =============================================================================
# Secret key for JWT tokens (generate a random string)
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Vercel deployment URL (auto-set by Vercel)
VERCEL_URL=https://your-app.vercel.app

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Use different values for development and production
# 3. Rotate secrets regularly
# 4. Use strong passwords for admin accounts
# 5. Enable 2FA on your Supabase account
# 6. Set up proper RLS policies in Supabase
# 7. Configure CORS settings if needed
# 8. Set up proper backup strategies for your database

